#Lists
import math
import statistics #mean, stdev
print ("This program takes 10 numbers and return, sum, average, and standard desviation")
numbers = [] #Empty list
counter = 0
while counter != 10:
    user_input = (float(input("Type a number: ")))
    numbers.append(user_input) #Here the list is fill
    counter = counter + 1
    numsum = sum(list(numbers))
average = statistics.mean(numbers)
dev = statistics.stdev (numbers)
print ("The sum of the numbers is:",numsum)
print ("The desviation is: ", dev)
print ('The average of the numbers is:',average)
